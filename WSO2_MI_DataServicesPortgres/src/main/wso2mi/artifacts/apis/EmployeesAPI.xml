<?xml version="1.0" encoding="UTF-8"?>
<api context="/employeesapi" name="EmployeesAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/employee">
        <inSequence>
            <dataServiceCall serviceName="PostgresDS">
                <operations type="single">
                    <operation name="ListEmployee">
                    </operation>
                </operations>
                <source type="inline"/>
                <target type="body"/>
            </dataServiceCall>
            <property name="messageType" value="application/json" scope="axis2"/>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
    <resource methods="GET" uri-template="/employee/{employeeNumber}">
        <inSequence>
            <http.get configKey="EmployeeConnection">
                <relativePath>${params.pathParams.employeeNumber}</relativePath>
                <headers>[]</headers>
                <forceScAccepted>false</forceScAccepted>
                <disableChunking>false</disableChunking>
                <forceHttp10>false</forceHttp10>
                <noKeepAlive>false</noKeepAlive>
                <responseVariable>http_get_1</responseVariable>
                <overwriteBody>true</overwriteBody>
            </http.get>
            <property name="messageType" value="application/json" scope="axis2"/>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
</api>
